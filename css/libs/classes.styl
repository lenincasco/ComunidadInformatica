vendor-prefixes = moz ms o webkit official

// fonts
/*for font in //aqui los nombres de las fuentes separados por espacios
    @font-face
        font-family font
        src url(fonts/font.ttf) //format(el formato es opcional)*/

// colors
$black = #33383d
$green = #7eab41

// img path
$ipa = "../img/"

display(arg = '')
    if arg == 'inline-block'
        display inline-block
        vertical-align top
        .lt-ie8 &
            *display inline
            *zoom 1
    else if arg == 'box'
        display -moz-box
        display -webkit-box
        display box
    else
        display arg

box-sizing()
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    box-sizing border-box

border-radius(arg = '')
    value = arg == '' ? 4px : arguments
    vendor('border-radius', value)

box-shadow(arg = '')
    value = arg == '' ? 0 0 5px rgba(#000, 0.10) : arguments
    vendor('box-shadow', value)
    -webkit-background-clip padding-box

transition(arg = '')
    value = arg == '' ? all 0.175s linear : arguments
    vendor('transition', value)

transform(arg = '')
    vendor('transform', arguments)

pie()
    .lt-ie9 &
        behavior url(libs/PIE.htc)

// botones
.button
    border-radius(3px)
    color #fff
    cursor pointer
    display(inline-block)
    font-size 0.9em
    font-weight 700
    letter-spacing 1px
    text-align center
    text-decoration none
    &:hover
        color #fff
//generic
.generic
    background #eee
    background linear-gradient(top, #fff, #e6e6e6)
    border 1px solid #aaa
    color #33383D
    text-shadow white 0 1px 0px
    &:hover
        border-color #777
        color (#33383D / 1.5)
        text-shadow white 0 1px 0px
    &:active
        background #eee
//green
.green
    background #7fbf4d
    background linear-gradient(top, #7fbf4d, #63a62f)
    border 1px solid #63a62f
    border-bottom 1px solid #5b992b
    box-shadow(inset 0 1px 0 0 #96ca6d)
    text-shadow 0 -1px 0 #4c9021
    &:hover
        background #76b347
        background linear-gradient(top, #76b347, #5e9e2e)
        box-shadow(inset 0 1px 0 0 #8dbf67)
    &:active
        border 1px solid #5b992b
        border-bottom 1px solid #538c27
        box-shadow(inset 0 0 8px 4px #548c29\, 0 1px 0 0 #eeeeee)
//blue
.blue
    background #3A8AC0
    background linear-gradient(top, #5EA1CF,#3A8AC0)
    border 1px solid #347BAB
    box-shadow(rgba(#fff, 0.3) 0 1px 0 inset\, rgba(#000, 0.05) 0 1px 2px)
    text-shadow rgba(#000, 0.3) 0px -1px 0px
    &:hover
        background #4391C6
        background linear-gradient(top, #6AA8D2,#4391C6)
    &:active
        background #3A8AC0
    &.disabled
        background (#3A8AC0 / 1.4)
        cursor default
//orange
.orange
    background #F36C21
    background linear-gradient(top, #FF7D4F, #E76335)
    border 1px solid #D06030
    text-shadow 0 -1px 0 #B4532A
    &:hover
        background #FE7840
        background linear-gradient(top, #FF8754, #E76D3A)
    &:active
        background #E76D3A
        background linear-gradient(top, #E76D3A, #FF8754)
//end botones